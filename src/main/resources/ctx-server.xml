<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:context="http://www.springframework.org/schema/context"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:tx="http://www.springframework.org/schema/tx"
       xsi:schemaLocation="
		http://www.springframework.org/schema/beans
		http://www.springframework.org/schema/beans/spring-beans-4.0.xsd
        http://www.springframework.org/schema/context
        http://www.springframework.org/schema/context/spring-context-4.0.xsd
        http://www.springframework.org/schema/tx
        http://www.springframework.org/schema/tx/spring-tx.xsd">

    <context:property-placeholder location="classpath:price-comparator-config.properties"/>

    <context:component-scan base-package="sk.hudak.pricecomparator.server"/>

    <!-- WICKET BEGIN -->

    <bean id="wicketApplication" class="sk.hudak.pricecomparator.client.wicket.PriceComparatorApplication">
        <property name="service" ref="PriceComparatorService"/>
    </bean>

    <!-- WICKET END -->

    <bean id="dataSource" class="org.apache.commons.dbcp.BasicDataSource" destroy-method="close">
        <property name="driverClassName" value="${database.jdbc.driverClassName}"/>
        <property name="url" value="${database.jdbc.url}"/>
        <property name="username" value="${database.jdbc.username}"/>
        <property name="password" value="${database.jdbc.password}"/>
    </bean>

    <bean id="sessionFactory" class="org.springframework.orm.hibernate4.LocalSessionFactoryBean">
        <property name="dataSource" ref="dataSource"/>
        <property name="hibernateProperties">
            <props>
                <prop key="hibernate.dialect">${database.hibernate.dialect}</prop>
                <prop key="hibernate.show_sql">${database.hibernate.show_sql}</prop>
                <prop key="hibernate.hbm2ddl.auto">${database.hibernate.hbm2ddl.auto}</prop>
                <prop key="hibernate.format_sql">${database.hibernate.format_sql}</prop>
                <prop key="hibernate.default_schema">${database.hibernate.default_schema}</prop>
            </props>
        </property>
        <property name="annotatedClasses">
            <list>
                <value>sk.hudak.pricecomparator.server.model.EshopEntity</value>
                <value>sk.hudak.pricecomparator.server.model.ProductEntity</value>
                <value>sk.hudak.pricecomparator.server.model.CategoryEntity</value>
                <value>sk.hudak.pricecomparator.server.model.ProductInEshopEntity</value>
                <value>sk.hudak.pricecomparator.server.model.GroupOfProductEntity</value>
                <value>sk.hudak.pricecomparator.server.model.GroupOfProductFindEntity</value>
            </list>
        </property>
    </bean>

    <bean id="transactionManager" class="org.springframework.orm.hibernate4.HibernateTransactionManager">
        <property name="sessionFactory" ref="sessionFactory"/>
    </bean>

    <tx:annotation-driven transaction-manager="transactionManager"/>

</beans>
